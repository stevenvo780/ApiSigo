{
  "name": "apisigo",
  "version": "1.0.0",
  "description": "API para conectar con SIGO - facturación y gestión de clientes",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node --transpile-only -r tsconfig-paths/register src/index.ts",
    "start:dev": "nodemon --watch 'src/**/*.ts' --exec ts-node -r tsconfig-paths/register src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "smoke": "ts-node -r tsconfig-paths/register scripts/smoke.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.20",
    "@nestjs/core": "^10.4.20",
    "@nestjs/platform-express": "^10.4.20",
    "axios": "^1.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.2",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.4.20",
    "@types/axios": "^0.9.36",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "jest-environment-node": "^30.0.5",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "sigo",
    "api",
    "facturacion",
    "invoicing",
    "typescript"
  ],
  "author": "",
  "license": "ISC"
}
